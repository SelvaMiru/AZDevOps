pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'This is a Build-1 Stage'
            }
        }
        stage('Test') {
            steps {
                echo 'This is a Test-1 Stage'
            }
        }
        stage('Deploy') {
            steps {
                echo 'This is a Deploy-1 Stage'
            }
        }
    }
}
